{
    "name": "novaway/feature-flag-bundle",
    "description": "Very KISS bundle to manage features flag",
    "type": "symfony-bundle",
    "keywords": ["symfony", "feature", "flag"],
    "license": "MIT",
    "authors": [
        {
            "name": "Jérémy DECOOL",
            "email": "jeremy@novaway.fr"
        }
    ],
    "require": {
        "php": ">= 7.3",
        "doctrine/annotations": "^1.12",
        "symfony/framework-bundle": "^5.4|^6.0",
        "symfony/yaml": "^5.4|^6.0"
    },
    "require-dev": {
        "symfony/asset": "^5.4|^6.0",
        "symfony/browser-kit": "^5.4|^6.0",
        "symfony/css-selector": "^5.4|^6.0",
        "symfony/templating": "^5.4|^6.0",
        "symfony/twig-bundle": "^5.4|^6.0",
        "twig/twig": "^2.0|^3.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.7",
        "phpstan/extension-installer": "^1.1",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "twig/twig": "To check feature in your Twig templates"
    },
    "autoload": {
        "psr-4": {"Novaway\\Bundle\\FeatureFlagBundle\\": "src/"},
        "exclude-from-classmap": ["src/Tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "Novaway\\Bundle\\FeatureFlagBundle\\": "src/Tests/",
            "Novaway\\Bundle\\FeatureFlagBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
